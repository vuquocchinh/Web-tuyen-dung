                    <div class="blog__item--wrapper">
                        <a href="/bai-viet/@item.TieuDe-@item.MaBaiViet" class="blog__item--link">
                            <div class="blog__item--img">
                                <img class="full_width" src="@item.AnhChinh" alt="@item.TenBaiViet">
                            </div>
                            <div class="blog__item--content">
                                <div class="blog__item--description">
                                    <h3 class="blog__item--name text-line-2">
                                        @item.TenBaiViet
                                    </h3>
