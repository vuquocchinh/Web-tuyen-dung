<!-- Main login -->
<div class="main__login">
    <div class="main__login--wrapper">
        <div class="main__login--title">
            <h4>Đăng Nhập</h4>
            <div class="login--close"></div>
        </div>
        <div class="main__login--content">
            <form class="main__login--form" method="post">
                <div id="login_message" class="text-danger text-center"></div>
                <div class="login__form--input">
                    <label for="login_email">Email</label>
                    <input type="email" id="login_email" placeholder="Nhập email của bạn" required autocomplete="off">
                </div>
                <div class="login__form--input">
                    <label for="login_password">Mật khẩu</label>
                    <input type="password" id="login_password" placeholder="Nhập mật khẩu" required autocomplete="off">
                </div>
                <div class="login__form--input">
                    <button class="form__input--submit" id="form_btn-login">Đăng nhập</button>
                </div>
            </form>
        </div>
        <div class="main__login--note">
            <p>Bạn chưa có tài khoản? <strong><a id="link-register" href="javascript:void(0)">Đăng ký ngay</a></strong></p>
        </div>
    </div>
</div>

<!-- Main register -->
<div class="main__register">
    <div class="main__register--wrapper">
        <div class="main__register--title">
            <h4>Đăng Ký</h4>
            <div class="register--close"></div>
        </div>
        <div class="main__register--content">

            <form class="main__login--form" method="post">
                <div id="register_message" class="text-danger text-center"></div>
                <div class="register__form--input">
                    <label for="register_name">Họ và tên</label>
                    <input type="text" name="register_name" id="register_name" placeholder="Nhập họ và tên của bạn" required autocomplete="off">
                </div>
                <div class="register__form--input">
                    <label for="register_email">Email</label>
                    <input type="email" name="register_email" id="register_email" placeholder="Nhập email của bạn" required autocomplete="off">
                </div>
                <div class="register__form--input">
                    <label for="register_password">Mật khẩu</label>
                    <input type="password" name="register_password" id="register_password" placeholder="Nhập mật khẩu" autocomplete="off" required>
                </div>
                <div class="register__form--input">
                    <label for="password_confirm">Xác nhận mật khẩu</label>
                    <input type="password" name="password_confirm" id="password_confirm" placeholder="Nhập lại mật khẩu" autocomplete="off" required>
                </div>
                <div class="register__form--input">
                    <button class="form__input--submit" id="form_btn-register">Đăng ký</button>
                </div>
            </form>
        </div>
        <div class="main__register--note">
            <p>Bạn đã có tài khoản? <strong><a id="link-login" href="javascript:void(0)">Đăng nhập ngay</a></strong></p>
        </div>
    </div>
</div>