
@{
    ViewBag.Title = "Danh sách ứng tuyển";
    ViewBag.PrevPage = "Danh sách ứng tuyển";
    ViewBag.CurrentPage = "Chưa xem";
    Layout = "~/Areas/NhaTuyenDung/Views/Shared/_LayoutEmployer.cshtml";
}


@section scripts {
    <script src="~/Assets/Client/js/Employer/ungTuyen.js"></script>
    <script>
        var size = parseInt($("#selection-datatable_length").val());
        var month = parseInt($("#selection-datatable_month").val());

        load(false, month, null, 1, size);

        //click event pagination
        $("body").on("click", "#load-pagination li a", function (event) {
            event.preventDefault();
            var page = $(this).attr('data-page');
            load(false, month, null, page, size);

        });

        //click event search
        $("#txtsearch").on("keyup", function () {
            let keyWord = $("#txtsearch").val();
            let size = parseInt($("#selection-datatable_length").val());
            if (keyWord != null) {
                load(false, month, keyWord, 1, size);
            }
        });

        // load data
        $("#selection-datatable_length").on("change", function () {
            let keyWord = $("#txtSearch").val();
            load(false, month, keyWord, 1, $(this).val());
        });
    </script>
}

<div class="row">
    <div class="col-xl-12">

        <div class="card">
            <div class="card-body">
                <div class="card-widgets py-2">
                    <a href="javascript: void(0);" data-toggle="reload"><i class="mdi mdi-refresh"></i></a>
                    <a data-toggle="collapse" href="#cardCollpase5" role="button" aria-expanded="false" aria-controls="cardCollpase5"><i class="mdi mdi-minus"></i></a>
                </div>


                <div class="card-header py-2">
                    <h4 class="header-title mb-0">Danh sách tin tuyển dụng</h4>
                </div>

                <div id="cardCollpase5" class="collapse pt-3 show">
                    <div class="row my-1">
                        <div class="col-sm-12 col-md-3">
                            <div class="dataTables_filter">
                                <label>
                                    Hiện <select id="selection-datatable_length" name="selection-datatable_length" aria-controls="selection-datatable" class="custom-select custom-select-sm form-control form-control-sm">
                                        <option value="5">5</option>
                                        <option value="10">10</option>
                                        <option value="15">15</option>
                                        <option value="20">20</option>
                                    </select> mục / trang
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-3">
                            <div class="dataTables_filter">
                                <label>
                                    Chiến dịch <select id="selection-datatable_month" aria-controls="selection-datatable" class="custom-select custom-select-sm form-control form-control-sm">
                                        <option value="0">Tất cả</option>
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            <option value=@i>Tháng @i</option>
                                        }
                                    </select>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="dataTables_filter text-right">
                                <label>
                                    Tìm kiếm:
                                    <input type="search" class="form-control form-control-sm" placeholder="" aria-controls="selection-datatable" id="txtsearch">
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-centered mb-0" id="datatablesSimple">
                            <thead>
                                <tr>
                                    <th>Mã tin</th>
                                    <th>Tên công việc</th>
                                    <th>Tên ứng viên</th>
                                    <th>Thời gian</th>
                                    <td>Trạng thái</td>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>

                    <div class="row align-items-center mt-2">
                        <div class="col-sm-12 col-md-5">
                            <div class="dataTables_info" id="selection-datatable_info" role="status" aria-live="polite"></div>
                        </div>
                        <div class="col-sm-12 col-md-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="selection-datatable_paginate">
                                <ul class="pagination pagination-rounded m-0 justify-content-end" id="load-pagination">
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

