@using TuyenDungCNTT.Models.ViewModels.User;
@using TuyenDungCNTT.Common;

@{
    var userLogin = (UserLogin)Session[CommonConstants.EMPLOYER_SESSION];
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Nhà tuyển dụng</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Website tìm việc làm cho sinh viên ngành công nghệ thông tin" name="description">
    <meta content="Coderthemes" name="author">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">

    <!-- App css -->
    <link href="~/Assets/Admin/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/Admin/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="~/Assets/Admin/css/app.min.css" rel="stylesheet" type="text/css">

    @RenderSection("css_Main", required: false)
</head>

<body>

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Topbar Start -->
        <div class="navbar-custom">
            <ul class="list-unstyled topnav-menu float-right mb-0">

                @if (Session[CommonConstants.EMPLOYER_SESSION] != null)
                {
                    <li class="dropdown notification-list">
                        <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            @if (TempData["AnhDaiDien"] != null)
                            {
                                <img src="@TempData["AnhDaiDien"]" alt="user-image" class="rounded-circle">
                            }
                            else
                            {
                                <img src="~/Assets/Client/img/Candidate/user-default.png" alt="user-image" class="rounded-circle">
                            }
                            <span class="pro-user-name ml-1">
                                @userLogin.Name <i class="mdi mdi-chevron-down"></i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right profile-dropdown ">
                            <!-- item-->
                            <div class="dropdown-header noti-title">
                                <h6 class="text-overflow m-0 text-center">@userLogin.Role</h6>
                            </div>

                            <!-- item-->
                            <a href="@Url.Action("Info", "Home")" class="dropdown-item notify-item">
                                <i class="remixicon-account-circle-line"></i>
                                <span>Thông tin công ty</span>
                            </a>

                            <div class="dropdown-divider"></div>

                            <!-- item-->
                            <a href="@Url.Action("Logout", "Home")" class="dropdown-item notify-item">
                                <i class="remixicon-logout-box-line"></i>
                                <span>Đăng xuất</span>
                            </a>

                        </div>
                    </li>
                }
            </ul>

            <div class="logo-box">
                <a href="@Url.Action("Index","Home")" class="logo text-center">
                    <span class="logo-lg">
                        <img src="~/Assets/Admin/img/logo.png" alt="" height="60">
                    </span>
                    <span class="logo-sm">
                        <img src="~/Assets/Admin/img/logo.png" alt="" height="24">
                    </span>
                </a>
            </div>

            <ul class="list-unstyled topnav-menu topnav-menu-left m-0">
                <li>
                    <button class="button-menu-mobile waves-effect waves-light">
                        <i class="fe-menu"></i>
                    </button>
                </li>
                <li>
                    <h1 class="header_name">NHÀ TUYỂN DỤNG</h1>
                </li>
            </ul>
        </div>

        <div class="left-side-menu">

            <div class="slimscroll-menu">

                @{Html.RenderAction("_SidebarMenu", "Home");}

            </div>

        </div>

        <div class="content-page">
            <div class="content">

                @if (TempData["Notify"] != null)
                {
                    <div id="msgAlert" class="alert @TempData["AlertType"]" role="alert">
                        @TempData["Notify"]
                    </div>
                }

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title">
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                                        @if (ViewBag.PrevPage != null)
                                        {
                                            <li class="breadcrumb-item active"><a href="javascript: void(0);">@ViewBag.PrevPage</a></li>
                                        }
                                        <li class="breadcrumb-item active"><a href="javascript: void(0);">@ViewBag.CurrentPage</a></li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>

                    @RenderBody()

                </div>

            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            &copy;Website tuyển dụng - 2022
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Assets/Admin/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="~/Assets/Admin/js/app.min.js"></script>
    <script>
        setTimeout(function () {
            $("#msgAlert").fadeOut("slow");
        }, 2000);
    </script>
    @RenderSection("scripts", false)
</body>
</html>

